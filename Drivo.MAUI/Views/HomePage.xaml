<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Drivo.MAUI.Views.HomePage">
    <ContentPage.Resources>
        <ResourceDictionary Source="../Resources/HomePageResourceDictionary.xaml"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <FlexLayout Direction="Column" JustifyContent="SpaceEvenly" AlignItems="Center">
                <Border>
                    <Grid RowDefinitions="3*, *">
                        <Image Source="lecture_background_image.png" Aspect="AspectFill" />
                        <FlexLayout Grid.Row="0">

                        </FlexLayout>
                        <FlexLayout BackgroundColor="{StaticResource AccentColor}" Grid.Row="1" Direction="Row" JustifyContent="SpaceAround" AlignItems="Center">
                            <Label Text="Najbliższy wykład"/>
                        </FlexLayout>
                    </Grid>
                </Border>
                <Border>
                    <Grid RowDefinitions="3*, *">
                        <Image Source="driving_background_image.png" Aspect="AspectFill" />
                        <FlexLayout Grid.Row="0">

                        </FlexLayout>
                        <FlexLayout BackgroundColor="{StaticResource AccentColor}" Grid.Row="1" Direction="Row" JustifyContent="SpaceAround" AlignItems="Center">
                            <Label Text="Najbliższa jazda"/>
                        </FlexLayout>
                    </Grid>
                </Border>
                <Border>
                    <Grid RowDefinitions="3*, *">
                        <Image Source="internal_exam_background_image.png" Aspect="AspectFill" />
                        <FlexLayout Grid.Row="0">

                        </FlexLayout>
                        <FlexLayout BackgroundColor="{StaticResource AccentColor}" Grid.Row="1" Direction="Row" JustifyContent="SpaceAround" AlignItems="Center">
                            <Label Text="Egzamin wewnętrzny"/>
                        </FlexLayout>
                    </Grid>
                </Border>
                <Border>
                    <Grid RowDefinitions="3*, *">
                        <Image Source="external_exam_background_image.png" Aspect="AspectFill" />
                        <FlexLayout Grid.Row="0" JustifyContent="Center" AlignItems="Center">
                            
                        </FlexLayout>
                        <FlexLayout BackgroundColor="{StaticResource AccentColor}" Grid.Row="1" Direction="Row" JustifyContent="SpaceAround" AlignItems="Center">
                            <Label Text="Egzamin zewnętrzny"/>
                        </FlexLayout>
                    </Grid>
                </Border>
            </FlexLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
