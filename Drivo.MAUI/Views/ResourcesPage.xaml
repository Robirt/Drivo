<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModels="clr-namespace:Drivo.MAUI.ViewModels"
    x:Class="Drivo.MAUI.Views.ResourcesPage">
    <ContentPage.Resources>
        <ResourceDictionary Source="../Resources/ResourcesPageResourceDictionary.xaml" />
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <ViewModels:ResourcesPageViewModel/>
    </ContentPage.BindingContext>
    <FlexLayout Direction="Column" JustifyContent="SpaceBetween" AlignItems="Center">
        <CarouselView ItemsSource="{Binding Resources}" ItemTemplate="{StaticResource ResourceDataTemplate}" IndicatorView="Indicator"></CarouselView>
        <IndicatorView HeightRequest="50" x:Name="Indicator" IndicatorColor="DarkGray" SelectedIndicatorColor="{StaticResource AccentColor}" IndicatorSize="12"/>
    </FlexLayout>
</ContentPage>