<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Drivo.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:Drivo.MAUI.Views"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="{StaticResource SecondaryBackgroundColor}"
    Shell.TitleColor="{StaticResource AccentColor}"
    Shell.UnselectedColor="{StaticResource SecondaryForegroundColor}">
    <TabBar>
        <ShellContent Title="Strona Główna" ContentTemplate="{DataTemplate Views:HomePage}"/>
        <ShellContent Title="Kalendarz"  ContentTemplate="{DataTemplate Views:CalendarPage}"/>
        <ShellContent Title="Nauka"  ContentTemplate="{DataTemplate Views:CourseModulePage}"/>
        <ShellContent Title="Profil"  ContentTemplate="{DataTemplate Views:ProfilePage}" />
    </TabBar>
</Shell>
