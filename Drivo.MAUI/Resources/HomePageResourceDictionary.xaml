<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Border">
        <Setter Property="Margin" Value="0, 5"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke" Value="{StaticResource AccentColor}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryBackgroundColor}"/>
        <Setter Property="WidthRequest" Value="350"/>
        <Setter Property="HeightRequest" Value="120"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="TextColor" Value="{StaticResource PrimaryForegroundColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="CaptionLabel">
        <Setter Property="Margin" Value="10, 0"/>
        <Setter Property="WidthRequest" Value="130"/>
        <Setter Property="HorizontalTextAlignment" Value="End"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="TextColor" Value="{StaticResource AccentColor}"/>
    </Style>
</ResourceDictionary>